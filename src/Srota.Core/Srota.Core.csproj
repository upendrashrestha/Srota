<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <!-- NuGet Package Info -->
    <PackageId>Srota</PackageId>
    <Version>1.0.0</Version>
    <Authors>Upendra Shrestha</Authors>
    <Description>A lightweight, plug-and-play .NET library for background task execution with multiple trigger types</Description>
    <PackageTags>background-tasks;polling;events;sse;worker;scheduler</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/upendrashrestha/srota</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="10.0.0" />
  </ItemGroup>

</Project>
